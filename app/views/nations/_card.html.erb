<div class="card">
  <%= image_tag nation.flag.url(:medium), class: "img-fluid card-img-top" %>

  <div class="card-block">
    <%= link_to nation.name, nation_url(nation), class: "lead card-link" %>
    <%= link_to "(Edit)", edit_nation_url(@nation), class: "small text-center" %>
  </div>

  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= link_to "Members", members_nation_url, class: "card-link" %></li>
  </ul>
</div>
