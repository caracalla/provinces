<!DOCTYPE html>
<html>
<head>
  <title>Provinces</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default bg-faded">
  <button class="navbar-toggler hidden-sm-up"
          type="button"
          data-toggle="collapse"
          data-target="#navbar-collapse">
    &#9776;
  </button>

  <%= link_to "Provinces", root_url, class: "navbar-brand" %>

  <div class="collapse navbar-toggleable-xs" id="navbar-collapse">
    <ul class="nav navbar-nav">
      <% if current_user %>
        <% if current_user.province %>
          <li class="nav-item">
            <%= link_to current_user.province.name,
                        province_url(current_user.province),
                        class: "nav-link lead" %>
          </li>

          <% if current_user.nation %>
            <li class="nav-item">
              <%= link_to current_user.nation.name,
                          nation_url(current_user.nation),
                          class: "nav-link lead" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Create a Nation",
                          new_nation_url,
                          class: "nav-link btn btn-primary-outline" %>
            </li>
          <% end %>

          <li class="nav-item">
            <%= link_to "STORE!", "#", class: "nav-link btn btn-warning" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Create your Province", new_province_url, class: "nav-link" %>
          </li>
        <% end %>
      <% else %>
        <li class="nav-item"><%= link_to "Home", root_url, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "About", '#', class: "nav-link" %></li>
      <% end %>
    </ul>

    <ul class="nav navbar-nav pull-right">
      <% if current_user.nil? %>
        <li class="nav-item"><%= link_to "Sign Up", new_user_url, class: "nav-link" %></li>
        <li class="navbar-divider"></li>
        <li class="nav-item"><%= link_to "Sign In", new_session_url, class: "nav-link" %></li>
      <% else %>
        <li class="dropdown closed">
          <button class="btn btn-primary-outline dropdown-toggle" type="button" data-toggle="dropdown">
            Account
          </button>

          <div class="dropdown-menu dropdown-menu-right">
            <%= link_to "My Profile", user_url(current_user), class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= button_to "Sign Out", session_url, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</nav>

<br>

<div class="container">
  <div id="flash">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <% if value.is_a?(Array) %>
          <ul>
            <% value.each do |item| %>
              <li><%= item %></li>
            <% end %>
        <% else %>
          <%= value %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div id="content">
    <%= yield %>
  </div>

  <% if Rails.env.development? %>
    <br>
    <hr>
    <%= debug(params) %>
  <% end %>
</div>

</body>
</html>
