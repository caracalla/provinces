<% action_url = user.persisted? ? user_url(user) : users_url %>
<% method = user.persisted? ? "patch" : "post" %>
<% submit_text = user.persisted? ? "Save Changes" : "Sign Up" %>

<%= form_for user, url: action_url, method: method, html: { multipart: true } do |form| %>
  <div class="form-group">
    <%= form.label :username, class: "lead" %>
    <%= form.text_field :username, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "lead" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: "lead" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :avatar, class: "lead" %>
    <%= form.file_field :avatar, class: "form-control-file" %>
    <br>
    <%= image_tag(user.avatar.url(:medium), height: "200", class: "img-rounded") if user.persisted? %>
  </div>

  <%= form.submit submit_text, class: "btn btn-primary" %>
<% end %>
